                    {% endfor %}
                  </select>
                </label>
              </div>
            </div>
            </form>
            <form id="form2" name="form2">
            <input type="hidden" id="textoculto" name="textoculto">
          </form>
            <div id="select_bloque" name="select_bloque">

            </div>

          </div>
        </div>
      </div>
    </section>
  </div>
</div>
{% endblock %}
{% block appScript %}

  <script src="views/app/js/coordinacion/distribucion.js"></script>
{% endblock %}
