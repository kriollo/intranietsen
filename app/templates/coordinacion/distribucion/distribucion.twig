{% extends 'portal/portal' %}
{% block appBody %}
<section class="content-header">
  <h4>
  <i class="fa fa-user"></i> Distribucion
  </h4>
</section>
<div class="box-body">
  <div class="row">
    <div class="col-md-1">
    </div>
    <section class="content">
      <div class="col-md-12">
        <div class="box box-primary">
          <div class="box-body">
          <form id="formusuarios" name="formusuarios">
            <div class="form-group">
              <div class="panel-footer">
                <label>Seleccionar Bloque:</label>
                &nbsp
                <label>
                  <select  id='selectbloque' name='selectbloque' onchange='seleccionar_bloque()'>
                    <option>--</option>
                    {% for b in db_bloque if false != db_bloque %}
