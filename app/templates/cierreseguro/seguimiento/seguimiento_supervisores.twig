{% extends 'portal/portal' %}
{% block appStylos %}
  <link rel="stylesheet" href="views/app/template/datatables/dataTables0.bootstrap.css">

{% endblock %}
{% block appBody %}
<div class="row">
    <div class="col-md-12">
        <section class="content-header">



            <h1>
                Cierre Seguro Supervisor
                <small>Cierre Seguro Supervisor</small>


                <div class="pull-right col-md-7">
                    <small>
                        <label>Filtrar por:</label>
                        <label>&nbsp;</label>
                        <labe><input type="radio" name="selectopcion" id='selectopcion' onchange="seleccionar_opcion('0')" checked>Por Fecha</label>
                        <label>&nbsp;</label>
                        <labe><input type="radio" name="selectopcion" id='selectopcion' onchange="seleccionar_opcion('1')">Por Orden</label>
                        <label>&nbsp;</label>
                        <div class="pull-right  col-md-8" id="divopciones" name="divopciones">
                         <form id="formfechas" name="formfechas">
                           <label>Desde:</label>
                           <input type='date' id='textdesde' name='textdesde' value='{{ "now"|date("Y-m-d") }}'>
                           <label>&nbsp;</label>
                           <label>Hasta:</label>
                           <input type='date' id='texthasta' name='texthasta' value='{{ "now"|date("Y-m-d") }}'>
                           <a class='btn btn-primary' id='btnfiltrarfecha' name='btnfiltrarfecha' title='Buscar registro' onclick='filtrarporfecha()' data-toggle='tooltip'>
                            Filtrar Fecha
                            </a>
                          </form>
                        </div>
                    </small>
                </div>

            </h1>

        </section>
    </div>
</div>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-body">
                    <form id="formcierre" name="formcierre">
                        <table id="datacierre" name="datacierre" class="table table-bordered table-responsive">
                            <thead>
                                <tr>
                                    <th>NÂ°</th>
                                    <th>N_ORDEN</th>
                                    <th>RUT_CLIENTE</th>
                                    <th>COMUNA</th>
                                    <th>FECHA_COMPROMISO</th>
                                    <th>ACTIVIDAD</th>
                                    <th>ANEXO1</th>
                                    <th>ANEXO2</th>
                                    <th>PRIORIDAD</th>
                                    <th>ESTADO</th>
                                    <th>OPCIONES</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% set No = 1 %}
                                {% for s in db_cierre_sup if false != db_cierre_sup %}
                                    <tr>
                                        <td>{{ No }}</td>
                                        <td>{{ s.n_orden }}</td>
                                        <td>{{ s.rut_cliente }}</td>
                                        <td>{{ s.comuna }}</td>
                                        <td>{{ s.fecha_compromiso }}</td>
                                        <td>{{ s.bloque }}</td>
                                        <td>{{ s.actividad }}</td>
                                        <td>{{ s.telefono }}</td>
                                        <td>{{ s.prioridad }}</td>
                                        {% if s.estado == "1" %}
                                            <td>PENDIENTE</td>
                                            <td><a data-toggle='tooltip' data-placement='top' id='btncierremodificar' name='btncierremodificar' title='Modificar' class='btn btn-warning btn-sm' disabled>
                                                <i class='glyphicon glyphicon-edit'></i>
                                            </a>
                                            <a data-toggle='tooltip' data-placement='top' id='btncierreaprobado' name='btncierreaprobado' title='Cierre Aprobado' class='btn btn-success btn-sm' onclick="select_cerrar_orden('{{c.id}}','{{c.n_orden}}','{{c.rut_cliente}}','{{c.comuna}}','{{c.fecha_compromiso}}','{{c.actividad}}','{{c.bloque}}','{{ c.telefono }}')">
                                                <i class='glyphicon glyphicon-check'></i>
                                            </a>&nbsp;&nbsp;<a data-toggle='tooltip' data-placement='top' id='btncierreserroneo' name='btncierreerroneo' title='Cierre Rechazado' class='btn btn-danger btn-sm' onclick="select_orden_rechazada('{{c.id}}','{{c.n_orden}}','{{c.rut_cliente}}','{{c.comuna}}','{{c.fecha_compromiso}}','{{c.actividad}},'{{c.bloque}}','{{ c.telefono }}')">
                                                <i class='glyphicon glyphicon-remove'></i>
                                            </a>&nbsp;&nbsp;<a data-toggle='tooltip' data-placement='top' id='btncierresiguiente' name='btncierresiguiente' title='Mover al Final' class='btn btn-primary btn-sm' onclick="select_volver_llamar('{{c.id}}','{{c.n_orden}}','{{c.rut_cliente}}','{{c.comuna}}','{{c.fecha_compromiso}}','{{c.actividad}}','{{c.prioridad}}','{{c.bloque}}','{{ c.telefono }}')">
                                                <i class='glyphicon glyphicon-fast-forward'></i>
                                            </a>
                                            </td>
                                        {% elseif s.estado == "2" %}
                                            <td>APROBADO</td>
                                            <td><a data-toggle='tooltip' data-placement='top' id='btncierremodificar' name='btncierremodificar' title='Modificar' class='btn btn-warning btn-sm' onclick="select_modificar_orden_cerrada('{{s.id}}','{{s.n_orden}}','{{s.rut_cliente}}','{{s.comuna}}','{{s.fecha_compromiso}}','{{s.actividad}}','{{s.bloque}}','{{s.telefono}}','{{s.prioridad}}','{{s.estado}}')">
                                                <i class='glyphicon glyphicon-edit'></i>
                                            </a></td>
                                        {% else %}
                                            <td>RECHAZADO</td>
                                            <td><a data-toggle='tooltip' data-placement='top' id='btncierremodificar' name='btncierremodificar' title='Modificar' class='btn btn-warning btn-sm' onclick="select_modificar_orden_cerrada('{{s.id}}','{{s.n_orden}}','{{s.rut_cliente}}','{{s.comuna}}','{{s.fecha_compromiso}}','{{s.actividad}}','{{s.bloque}}','{{s.telefono}}','{{s.prioridad}}','{{s.estado}}')">
                                                <i class='glyphicon glyphicon-edit'></i>
                                            </a></td>
                                        {% endif %}
                                    </tr>
                                    {% set No = No + 1 %}
                                {% endfor %}
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
{% block appScript %}

  <script src="views/app/template/datatables/jquery.dataTables.min.js" type="text/javascript"></script>
  <script src="views/app/template/datatables/dataTables.bootstrap.min.js" type="text/javascript"></script>

  <script src="views/app/js/despacho/despacho.js"></script>

    <script>
        $("#datacierre").dataTable({
            "language": {
                "search": "Buscar:",
                "zeroRecords": "No hay datos para mostrar",
                "info": "Mostrando _END_ Registros, de un total de _TOTAL_ ",
                "loadingRecords": "Cargando...",
                "processing": "Procesando...",
                "infoEmpty": "No hay entradas para mostrar",
                "lengthMenu": "Mostrar _MENU_ Filas",
                "paginate": {
                    "first": "Primera",
                    "last": "Ultima",
                    "next": "Siguiente",
                    "previous": "Anterior"
                }
            },
            "autoWidth": true,
            "bSort": false,
            "scrollX": true
        });
    </script>
{% endblock %}
