{% extends 'portal/portal' %}
{% block appStylos %}
  <link rel="stylesheet" href="views/app/template/datatables/dataTables.bootstrap.css">

{% endblock %}
{% block appBody %}
<div class="row">
    <div class="col-md-12">
        <section class="content-header">
            <h1>
                Cierre Seguro
                <small>Cierre Seguro</small>
            </h1>
        </section>
    </div>
</div>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-body">
                    <form id="formcierre" name="formcierre">
                        <table id="datacierre" name="datacierre" class="table table-bordered table-responsive">
                            <thead>
                                <tr>
                                    <th>N_ORDEN</th>
                                    <th>RUT_CLIENTE</th>
                                    <th>COMUNA</th>
                                    <th>COMPROMISO</th>
                                    <th>BLOQUE</th>
                                    <th>ACTIVIDAD</th>
                                    <th>TELEFONO</th>
                                    <th>ESTADO</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% set No = 1 %}
                                {% for c in db_cierre if false != db_cierre %}
                                    <tr>
                                        <td>{{ c.n_orden }}</td>
                                        <td>{{ c.rut_cliente }}</td>
                                        <td>{{ c.comuna }}</td>
                                        <td>{{ c.fecha_compromiso }}</td>
                                        <td>{{ c.bloque }}</td>
                                        <td>{{ c.actividad }}</td>
                                        <td>{{ c.telefono }}</td>
                                        <td><a data-toggle='tooltip' data-placement='top' id='btncierreaprobado' name='btncierreaprobado' title='Cierre Aprobado' class='btn btn-success btn-sm' onclick="select_cerrar_orden('{{c.id}}','{{c.n_orden}}','{{c.rut_cliente}}','{{c.comuna}}','{{c.fecha_compromiso}}','{{c.actividad}}','{{c.bloque}}','{{ c.telefono }}')">
                                            <i class='glyphicon glyphicon-check'></i>
                                        </a>&nbsp;&nbsp;<a data-toggle='tooltip' data-placement='top' id='btncierreserroneo' name='btncierreerroneo' title='Cierre Rechazado' class='btn btn-danger btn-sm' onclick="select_orden_rechazada('{{c.id}}','{{c.n_orden}}','{{c.rut_cliente}}','{{c.comuna}}','{{c.fecha_compromiso}}','{{c.actividad}},'{{c.bloque}}','{{ c.telefono }}')">
                                            <i class='glyphicon glyphicon-remove'></i>
                                        </a>&nbsp;&nbsp;<a data-toggle='tooltip' data-placement='top' id='btncierresiguiente' name='btncierresiguiente' title='Mover al Final' class='btn btn-primary btn-sm' onclick="select_volver_llamar('{{c.id}}','{{c.n_orden}}','{{c.rut_cliente}}','{{c.comuna}}','{{c.fecha_compromiso}}','{{c.actividad}}','{{c.prioridad}}','{{c.bloque}}','{{ c.telefono }}')">
                                            <i class='glyphicon glyphicon-fast-forward'></i>
                                        </a></td>
                                    </tr>
                                    {% set No = No + 1 %}
                                {% endfor %}
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
{% block appScript %}

  <script src="views/app/template/datatables/jquery.dataTables.min.js" type="text/javascript"></script>
  <script src="views/app/template/datatables/dataTables.bootstrap.min.js" type="text/javascript"></script>

  <script src="views/app/js/cierreseguro/cierreseguro.js"></script>

    <script>
        $("#datacierre").dataTable({
            "language": {
                "search": "Buscar:",
                "zeroRecords": "No hay datos para mostrar",
                "info": "Mostrando _END_ Registros, de un total de _TOTAL_ ",
                "loadingRecords": "Cargando...",
                "processing": "Procesando...",
                "infoEmpty": "No hay entradas para mostrar",
                "lengthMenu": "Mostrar _MENU_ Filas",
                "paginate": {
                    "first": "Primera",
                    "last": "Ultima",
                    "next": "Siguiente",
                    "previous": "Anterior"
                }
            },
            "autoWidth": true,
            "bSort": false,
            "scrollX": true
        });
    </script>
{% endblock %}
